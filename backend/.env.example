# Example environment variables for the AIRA backend

# Secret key used by Flask session features (change in production)
SECRET_KEY=

# JWT secret key 
JWT_SECRET_KEY=
JWT_EXP_DAYS=7

# Database url (sqlite example). Use PostgreSQL in production if needed.
# For SQLite (local dev): sqlite:///aira.db
DATABASE_URL=sqlite:///aira.db

# Gemini API configuration (set to the correct endpoint and API key)
GEMINI_API_URL=
GEMINI_API_KEY= 

# Flask server options
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=True
